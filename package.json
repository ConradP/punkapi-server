{
  "name": "punkapi-server",
  "version": "2.0.0",
  "description": "The core behind punkapi.com",
  "main": "index.js",
  "engines": {
    "node": "7.0.0"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "standard --verbose | snazzy && mocha",
    "cover": "istanbul cover _mocha",
    "coveralls": "npm run cover -- --report lcovonly && cat ./coverage/lcov.info | coveralls",
    "deploy": "now -e NODE_ENV=production -e SENTRY_KEY=@punk-sentry-key -e GS_SITE_TOKEN=@punk-gs-site-token -e GS_API_KEY=@punk-gs-api-key",
    "alias": "now alias"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samjbmason/punkapi-server.git"
  },
  "author": "Sam Mason <sam.jbmason@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/samjbmason/punkapi-server/issues"
  },
  "homepage": "https://github.com/samjbmason/punkapi-server#readme",
  "dependencies": {
    "boom": "^4.2.0",
    "cors": "^2.8.1",
    "dotenv": "^2.0.0",
    "express": "^4.14.0",
    "express-rate-limit": "^2.6.0",
    "express-validator": "^2.21.0",
    "gosquared": "^3.1.0",
    "helmet": "^3.1.0",
    "lodash": "^4.16.6",
    "moment": "^2.16.0",
    "ms": "^0.7.2",
    "punkapi-lib": "^2.2.0",
    "raven": "^1.1.1",
    "winston": "^2.3.0"
  },
  "devDependencies": {
    "coveralls": "^2.11.15",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "mocha-lcov-reporter": "^1.2.0",
    "nodemon": "^1.11.0",
    "should": "^11.1.1",
    "should-http": "0.0.4",
    "snazzy": "^5.0.0",
    "standard": "^8.5.0",
    "supertest": "^2.0.1"
  },
  "standard": {
    "ignore": [
      "test/**/*"
    ]
  },
  "now": {
    "alias": "api.punkapi.com"
  }
}
